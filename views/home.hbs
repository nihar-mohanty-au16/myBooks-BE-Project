<link rel="stylesheet" href="/css/home.css">

{{>header}}

<section class="container mt-2">
    <div class="row card my-3 px-1 pb-2 pt-3 d-flex flex-row">
        <p class="fs-3">New Arrivals</p>
        {{#each books}}
        <div class="col-sm-3 gx-2">
            <div class="card pt-3 pb-1">
                <a href="/listing/{{this._id}}"><img src="{{this.cover}}" class="card-img-top p-0 pb-0" alt="..."></a>
                <div class="card-body d-flex justify-content-center flex-column px-4">
                    <a href="/listing/{{this._id}}" class="text-decoration-none text-dark"><h5 class="card-title">{{this.title}}</h5></a>
                    <div class="d-flex flex-row align-items-end justify-content-between">
                        <span>Rs.{{this.price}}</span>
                        <form>
                            <input class="d-none" type="text" value="{{this._id}}" name="bookid">
                            <input class="d-none" type="text" value="1" name="quantity">
                            <button formaction="/cart" formmethod="post" class="btn btn-sm btn-primary">Add To Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>