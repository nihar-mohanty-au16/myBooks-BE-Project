<script src="https://www.paypalobjects.com/api/checkout.js"></script>
<script src="/js/payment.js" defer></script>

<div class="container d-flex justify-content-center flex-column col-6">
    <div class="row card my-3 mb-1 pt-3 p-2 d-flex flex-row">
        <p class="fs-3">Checkout</p>
        <div class="card mt-0">
            <div class="card-body d-flex justify-content-center">
                <p class="fs-4 text-start col-11 mb-0">Confirm Purchase</p>
            </div>
            <div class="card-body d-flex justify-content-center mt-0">
                <form class="d-flex justify-content-center mt-0 flex-column" action="/checkout/payment" method="post" class="col-11">
                    <p class="fs-6 mb-0">Name <span class="ms-2"><span class="fs-5 mb-2">{{name}}</span></span></p>
                    <p class="fs-6 mb-0">Contact<span class="ms-2"><span class="fs-5 mb-2">{{contact}}</span></span></p>
                    <p class="fs-6 mb-0">Address<span class="ms-2"><span class="fs-5 mb-2">{{address}}</span></span></p>
                    <p class="fs-6 mb-0">Pincode<span class="ms-2"><span class="fs-5 mb-2">{{pincode}}</span></span></p>
                    <p class="fs-6 mb-2">Subtotal<span class="ms-2">Rs.<span class="fs-5 mb-2">{{amount}}</span></span></p>
                    <div class="text-center mt-3">
                        <span id="paypal-button" name="amount" value="{{amount}}"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
