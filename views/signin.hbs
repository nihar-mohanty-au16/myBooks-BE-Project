<link rel="stylesheet" href="/css/signin.css">
<script defer src="/js/signin.js"></script>

<section>
    <div class="container">
        <div class="user signinBx">
            <div class="imgBx"><img src="https://images.wallpaperscraft.com/image/books_library_old_111388_800x600.jpg" alt="" /></div>
                <div class="formBx">
                    <form action="/signin" method="post">
                        <h2>Sign In</h2>
                        <input type="email" name="email" placeholder="Email Address" value="riya@gmail.com" required>
                        <input type="password" name="password" placeholder="Password" value="pass" required>
                        <input type="submit" value="Login">
                        <p class="signup">
                                Don't have an account ?
                            <a href="#" onclick="toggleForm();">Sign Up.</a>
                        </p>
                    </form>
            </div>
        </div>
        <div class="user signupBx">
            <div class="formBx">
                <form action="/signup" method="post">
                    <h2>Create an account</h2>
                    <input type="text" name="name" placeholder="Full Name" required>
                    <input type="email" id="email" name="email" placeholder="Email Address" required>
                    <input type="password" id="password" name="password" placeholder="Create Password"required>
                    <p id='message'></p>
                    <input type="submit" value="Sign Up">
                    <p class="signup">
                        Already have an account ?
                    <a href="#" onclick="toggleForm();">Sign in.</a>
                    </p>
                </form>
            </div>
            <div class="imgBx"><img src="https://images.wallpaperscraft.com/image/books_shelf_pages_178156_800x600.jpg" alt="" /></div>
        </div>
    </div>
</section>
