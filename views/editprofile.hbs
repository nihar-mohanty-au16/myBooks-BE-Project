<div class="container d-flex justify-content-center flex-column col-6">
    <div class="row card my-3 mb-1 pt-3 p-2 d-flex flex-row">
        <p class="fs-3">Edit Details</p>
        <div class="card mt-0">
            <div class="card-body d-flex justify-content-center mt-0">
                <form action="/updateprofile" method="post" enctype="multipart/form-data" class="col-11">
                    <div class="mb-3">
                        <label class="form-label">Profile Photo</label>
                        <input type="file" class="form-control" placeholder="250" name="photo">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" placeholder="Full Name" value="{{name}}" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input type="text" class="form-control" placeholder="Email Address" value="{{email}}" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact Number</label>
                        <input type="text" class="form-control" placeholder="Contact Number" value="{{contact}}" name="contact">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea type="text" rows="4" class="form-control" placeholder="Address" value="{{address}}" name="address"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Pincode</label>
                        <input type="text" class="form-control" placeholder="Pincode" value="{{pincode}}" name="pincode">
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary col-5" type="submit">Edit Details</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>