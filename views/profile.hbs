<link rel="stylesheet" href="/css/profile.css">

<div class="container d-flex justify-content-center flex-column col-7">
    <div class="card my-3 mb-1 pt-3 p-2 d-flex flex-column">
        <p class="fs-3 ms-3">Profile</p>
        <div class="d-flex flex-row align-items-center">
            <div class="w-25 d-flex justify-content-center">
                <img class="border" src="{{photo}}" alt="...">
            </div>
            <div class="profile-box d-flex flex-row align-items-start">
                <div class="details">
                    <div class="d-flex justify-content-center flex-column p-3">
                        <span class="fs-6">Name</span>
                        <span class="fs-6">Email</span>
                    </div>
                </div>
                <div class="user-details">
                    <div class="d-flex justify-content-center flex-column p-3">
                        <span class="fs-6 user-details">{{name}}</span>
                        <span class="fs-6 user-details">{{email}}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end p-1">
            {{#if ownprofile}}
            <a href="/editprofile" class="btn btn-outline-secondary col-2 btn-sm mt-2 me-2">Edit Profile</a>
            <a href="/logout" class="btn btn-outline-danger col-2 btn-sm mt-2">Logout</a>
            {{/if}}
        </div>
    </div>
    {{#if ownprofile}}
    <div class="card my-3 pt-3 p-2 d-flex flex-column">
        <p class="fs-3 ms-3">Sell Your Book</p>
        <div class="buttons col-12 mt-2 px-0 d-flex flex-row justify-content-center">
            <a href="/upload" class="btn btn-primary col-5">Sell Book</a>
        </div>
    </div>
    {{/if}}
</div>